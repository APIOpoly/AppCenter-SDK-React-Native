platform :ios, '8.0'

target 'DemoApp' do
    # React Native
    pod 'React', :path => '../node_modules/react-native', :subspecs => [
        'Core',
        'RCTActionSheet',
        'RCTGeolocation',
        'RCTImage',
        'RCTNetwork',
        'RCTSettings',
        'RCTText',
        'RCTVibration',
        'RCTWebSocket'
    ]

    # Sonoma native SDK dependencies
    pod 'Sonoma', :podspec => 'https://download.hockeyapp.net/sonoma/ios/Sonoma.podspec'

    # React Native wrappers for Sonoma SDK
    pod 'RNMobileCenter', :podspec => '../../RNMobileCenter.podspec' # Will point to github tag
    pod 'RNAnalytics', :path => '../node_modules/mobilecenter-analytics'
    pod 'RNCrashes', :path => '../node_modules/mobilecenter-crashes'
end