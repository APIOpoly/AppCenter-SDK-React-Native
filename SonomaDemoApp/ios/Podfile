platform :ios, '8.0'

target 'SonomaDemoApp' do
    # React Native
    pod 'React', :path => '../node_modules/react-native', :subspecs => [
        'Core',
        'RCTActionSheet',
        'RCTGeolocation',
        'RCTImage',
        'RCTNetwork',
        'RCTSettings',
        'RCTText',
        'RCTVibration',
        'RCTWebSocket'
    ]

    # Sonoma native SDK dependencies
#    pod 'SonomaCore', :path => '../../SonomaCore.podspec'
#    pod 'SonomaAnalytics', :path => '../../SonomaAnalytics.podspec'
#    pod 'SonomaCrashes', :path => '../../SonomaCrashes.podspec'
    pod 'Sonoma', :podspec => 'https://download.hockeyapp.net/sonoma/ios/Sonoma.podspec',  :subspecs => ['SonomaAnalytics', 'SonomaCrashes', 'SonomaCore']

    # React Native wrappers for Sonoma SDK
    pod 'RNSonomaCore', :podspec => '../../RNSonomaCore/RNSonomaCore.podspec'
    pod 'RNSonomaAnalytics', :path => '../../RNSonomaAnalytics'
    pod 'RNSonomaCrashes', :path => '../../RNSonomaCrashes'
end